{
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/web",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/((?!static|favicon.svg|api).*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.svg",
      "dest": "/favicon.svg"
    }
  ]
}

